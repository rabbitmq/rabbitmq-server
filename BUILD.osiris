load("@//bazel_erlang:bazel_erlang_lib.bzl", "erlang_lib")

APP_ENV = """[
	{data_dir, "/tmp/osiris"},
	{port_range, {6000, 6500}}
]"""

DEPS = [
    "@gen-batch-server//:bazel_erlang_lib",
]

erlang_lib(
    app_name = "osiris",
    app_version = "master",
    app_description = "New project",
    app_module = "osiris_app",
    app_env = APP_ENV,
    extra_apps = [
        "sasl",
        "crypto",
    ],
    deps = DEPS,
)
