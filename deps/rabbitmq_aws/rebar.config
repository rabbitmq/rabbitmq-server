{erl_opts, [fail_on_warning, debug_info]}.
{minimum_otp_vsn, "17.5"}.

{deps, [
  {jsx, "2.8.0"},
  {meck, "0.8.4"}
]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{eunit_exclude_deps, true}.
{eunit_opts, [verbose, {skip_deps, true}]}.

{dialyzer, [{plt_apps, all_deps},
            {plt_extra_apps, [edoc, jsx, xmerl]}]}.

{plugins, [rebar3_hex]}.
