    [{datatype, ip}]}.

{mapping, "web_stomp.ws_path", "rabbitmq_web_stomp.ws_path",
    [{datatype, string}]}.

{translation,
    "rabbitmq_web_stomp.tcp_config",
    fun(Conf) ->
        Setting = cuttlefish:conf_get("web_stomp.tcp.listener", Conf),
        case Setting of
            {Ip, Port} when is_list(Ip), is_integer(Port) ->
                [{ip, Ip}, {port, Port}];
            _ -> Setting
        end
    end
}.

